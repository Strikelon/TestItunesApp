<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/detail_activity_linear_layout_margin"
        android:orientation="vertical"
        tools:context=".view.DetailActivity">

    <TextView
            android:id="@+id/album_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/album_name_text_size"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="@dimen/detail_activity_normal_layout_margin_bottom"/>

    <TextView
            android:id="@+id/artist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/artist_name_text_size"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:layout_marginBottom="@dimen/detail_activity_normal_layout_margin_bottom"/>

    <TextView
            android:id="@+id/genre_and_release_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/detail_activity_normal_layout_margin_bottom"/>

    <ImageView
            android:id="@+id/album_photo"
            android:layout_width="@dimen/detail_album_image_width"
            android:layout_height="@dimen/detail_album_image_height"
            android:scaleType="centerCrop"
            android:layout_marginBottom="@dimen/detail_activity_normal_layout_margin_bottom"/>

    <TextView
            android:id="@+id/album_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/detail_activity_double_layout_margin_bottom"/>

    <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

</LinearLayout>